<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="https://cdn-icons-png.flaticon.com/512/6543/6543247.png"
    />
    <title>廣志の私帳</title>
    {{! Bootstrap v5.1}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    {{! Font Awesome }}
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
      integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/{{style}}.css" />
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid mx-3">
        <a class="navbar-brand" href="/">
          <i class="fas fa-receipt"></i><span class="ms-2"></span>
          廣志の私帳
        </a>

        {{#if user}}
          <a href="#"><button
              type="button"
              class="btn nav-btn"
            >Logout</button></a>
        {{else}}
          <a href="#"><button type="button" class="btn nav-btn">Sign up</button></a>
        {{/if}}
      </div>
    </nav>

    {{! Alerts }}
    {{#if error_messages}}
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-exclamation-triangle alert-icon"></i></strong>
        {{error_messages}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    {{#if success_messages}}
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-check-circle alert-icon"></i></strong>
        {{success_messages}}
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}

    {{{body}}}

    {{! Bootstrap v5.1}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>